set sandbox none
set statusbar-h-padding 0
set statusbar-v-padding 0
set selection-clipboard clipboard
set window-title-basename true
set statusbar-home-tilde true
set scroll-step 60
include gruvbox-dark

map g goto top
map u scroll half-up
map d scroll half-down
map D toggle_page_mode
map b toggle_statusbar
map r reload
map R feedkeys o<Tab><Return>
map S feedkeys s<S-k><S-k>
map t snap_to_page
map > rotate rotate-cw
map < rotate rotate-ccw
map K zoom in
map J zoom out
map H navigate previous
map L navigate next
map i recolor
map p print

map [presentation] g goto top
map [presentation] G goto bottom
map [presentation] h navigate previous
map [presentation] j navigate next
map [presentation] k navigate previous
map [presentation] l navigate next
unmap [presentation] z
