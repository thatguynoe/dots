# Basic Settings
set shell zsh
set shellopts "-euy"
set ifs "\n"
set scrolloff 10
set period 1
set incsearch on
set tabstop 4
set drawbox on
set mouse on
set findlen 0
set timefmt "01.2.2006 (Mon) 15:04:05"
set hiddenfiles ".*:*.aux:*.log:*.synctex.gz:*.out:*.exe:*.o:run.xml:lost+found"

# Set file previewer and cleaner
set previewer ~/.config/lf/scope
set cleaner ~/.config/lf/cleaner

# Functions
cmd open ${{
    test -L $f && f=$(readlink -f $f)
    case $(file --mime-type $f -b) in
        image/vnd.djvu|application/pdf) setsid -f zathura $fx >/dev/null 2>&1 ;;
        application/x-pie-executable | application/x-object) lf -remote "send echo Cannot open binaries." ;;
        text/*) clear & $EDITOR $fx ;;
            */json) clear & $EDITOR $fx ;;
            */x-abook-addressbook) clear & $EDITOR $fx ;;
        text/docx) onlyoffice-desktopeditors $fx >/dev/null 2>&1;;
        image/x-xcf) setsid -f gimp $f >/dev/null 2>&1 ;;
        image/svg+xml) display -- $f ;;
        image/*) nsxiv-rifle $f ;;
        audio/*) mpv --audio-display=no $f ;;
        video/*) setsid -f mpv $f -quiet >/dev/null 2>&1 ;;
        *) for f in $fx ; do setsid -f $OPENER $f >/dev/null 2>&1 ; done ;;
    esac
}}

cmd paste-overwrite %{{
    mode=$(head -1 ~/.local/share/lf/files)
    list=$(sed 1d ~/.local/share/lf/files)
    if [ $mode = 'copy' ]; then
        cp -r $list .
    elif [ $mode = 'move' ]; then
        mv $list .
    fi
    lf -remote 'send load'
    lf -remote 'send clear'
}}

cmd mkdir $mkdir -p "$(echo $* | tr ' ' '\ ')"
cmd nvim $nvim "$(echo $* | tr ' ' '\ ')"

cmd bulkrename $printf '%s\n' $(basename -a $fx) | vidir -; lf -remote "send $id unselect"
cmd zip &zip -r "$1.zip" $(basename -a $fx); lf -remote "send $id unselect"

# Unmappings
map t
map m
map c
map y
map p
map U

# General Mappings
map <c-f> $lf -remote "send $id select '$(fzf)'"
map D delete
map yy copy
map yw :$echo -n $fx | xclip -selection clipboard
map pp paste
map po paste-overwrite

map md push :mkdir<space>
map cd push :cd<space>
map <c-r> reload
map <enter> shell
map o open
map e open
map x :&chmod +x $f; lf -remote "send $id reload"
map X :&ext $f
map Z push :zip<space>

map tU !clear && du --max-depth=1 -h --apparent-size
map tu !clear && du --max-depth=1 -h --apparent-size | sort -rh

map u :unselect; clear
map V push :nvim<space>
map b $setbg $f
map `` push :mark-load<enter>'

# Renaming
map A rename # at the very end
map cw push A<c-u> # new rename
map I push A<c-a> # at the very beginning
map a push A<a-b><a-b><a-f> # before extention
map B bulkrename

# Movement
map gg top
map J half-down
map K half-up
map <c-y> up
map <c-e> down

map <m-1> open
map <m-2> updir
map <m-up> up
map <m-down> down

# Directory Shortcuts
map gh cd ~/
map gd cd ~/Downloads
map gD cd ~/Documents
map gp cd ~/Pictures
map gm cd ~/Music
map gcf cd ~/.config
map glc cd ~/.local

map gr cd /
map gM cd /mnt
