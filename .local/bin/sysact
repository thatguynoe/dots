#!/bin/sh

# A dmenu wrapper script for system functions.

export WM="dwm"
case "$(readlink -f /sbin/init)" in
*systemd*) ctl='systemctl' ;;
*) ctl='loginctl' ;;
esac

# This function is needed if there are multiple instances of the window
# manager.
wmpid() {
    tree="$(pstree -ps $$)"
    tree="${tree#*$WM(}"
    echo "${tree%%)*}"
}

case "$(printf "ğŸ”’ lock\nğŸšª leave $WM\nâ™»ï¸ renew $WM\nğŸ» hibernate\nğŸ’¤ sleep\nğŸ”ƒ reboot\nğŸ–¥ï¸ shutdown\nğŸ“º display off" | dmenu -i -p 'Action: ')" in
'ğŸ”’ lock') slock ;;
"ğŸšª leave $WM") killall xinit ;;
"â™»ï¸ renew $WM") kill -HUP "$(wmpid)" ;;
'ğŸ» hibernate') slock $ctl hibernate ;;
'ğŸ’¤ sleep') slock $ctl suspend ;;
'ğŸ”ƒ reboot') $ctl reboot ;;
'ğŸ–¥ï¸ shutdown') $ctl poweroff ;;
'ğŸ“º display off') sleep 0.1 && xset dpms force off ;;
*) exit 1 ;;
esac
